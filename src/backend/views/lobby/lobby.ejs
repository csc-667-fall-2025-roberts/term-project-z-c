<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobby - UNO Online</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Roboto', sans-serif;
        height: 100vh;
        min-height: 100dvh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: 
          radial-gradient(circle at center, #81c784 0%, transparent 60%),
          linear-gradient(135deg, #66bb6a 0%, #4caf50 50%, #66bb6a 100%);
        background-color: #66bb6a;
        color: #333;
        padding: 20px;
      }

      .container {
        width: 100%;
        max-width: 1200px;
        display: flex;
        flex-direction: column;
        gap: 30px;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 20px;
        background: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
      }

      .welcome {
        font-family: 'Fredoka One', cursive;
        font-size: 3.5rem;
        color: #2e7d32;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
      }

      .user-info {
        font-size: 1.1rem;
        margin-top: 10px;
        color: #333;
      }

      .edit-name-btn {
        margin-left: 10px;
        padding: 6px 12px;
        background: #4caf50;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 700;
      }

      .edit-name-btn:hover {
        background: #388e3c;
      }

      .logout-btn {
        align-self: center;
        padding: 14px 28px;
        background: #d32f2f;
        color: white;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.2rem;
        border-radius: 14px;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
      }

      .logout-btn:hover {
        background: #f44336;
        transform: scale(1.05);
      }

      .main-content {
        display: flex;
        flex-direction: column;
        gap: 30px;
      }

      @media (min-width: 900px) {
        body {
          align-items: flex-start;
          padding-top: 40px;
        }
        .main-content {
          flex-direction: row;
        }
      }

      .games-section {
        flex: 1.2;
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
      }

      .games-title, .create-game-title, .chat-title {
        font-family: 'Fredoka One', cursive;
        font-size: 2.4rem;
        color: #2e7d32;
        margin-bottom: 25px;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
      }

      #game-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 50px;
        max-height: 500px;
        overflow-y: auto;
      }

      .game-item {
        background: rgba(240, 255, 240, 0.9);
        padding: 25px;
        border-radius: 16px;
        border-left: 8px solid #4caf50;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }

      .game-item.private-game {
        border-left-color: #ff9800;
        background: rgba(255, 248, 225, 0.9);
      }

      .game-header {
        display: flex;
        justify-content: space-between;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 12px;
      }

      .game-name {
        color: #2e7d32;
      }

      .game-details div {
        margin: 8px 0;
        font-size: 1.1rem;
      }

      .goto-game-btn {
        display: block;
        margin-top: 20px;
        padding: 14px 24px;
        background: #4caf50;
        color: white;
        text-decoration: none;
        text-align: center;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        width: 100%;
      }

      .goto-game-btn:hover {
        background: #388e3c;
        transform: scale(1.05);
      }

      .create-game-form {
        display: flex;
        flex-direction: column;
        gap: 25px;
        max-width: 500px;
        margin: 0 auto;
      }

      .form-group label {
        display: block;
        margin-bottom: 10px;
        font-weight: 700;
        font-size: 1.2rem;
      }

      .form-group input[type="text"],
      .form-group input[type="password"],
      .form-group select {
        width: 100%;
        padding: 16px;
        border: 1px solid #ddd;
        border-radius: 14px;
        background: white;
        font-size: 1.2rem;
      }

      .form-group input[type="text"]:focus,
      .form-group input[type="password"]:focus,
      .form-group select:focus {
        outline: none;
        border-color: #66bb6a;
        box-shadow: 0 0 0 3px rgba(102, 187, 106, 0.3);
      }

      .form-group input[type="checkbox"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
      }

      .checkbox-label {
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        font-weight: 700;
        font-size: 1.2rem;
      }

      .create-game-btn {
        padding: 18px;
        background: #4caf50;
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 1.6rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .create-game-btn:hover {
        background: #388e3c;
        transform: scale(1.05);
      }

      #chat-area {
        flex: 1.5;
        min-width: 380px;
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }

      #message-listing {
        flex: 1;
        overflow-y: auto;
        margin-bottom: 25px;
        max-height: 450px;
        padding-right: 10px;
      }

      .chat-message {
        margin-bottom: 18px;
        background: #e8f5e8;
        padding: 16px;
        border-radius: 14px;
        border-left: 5px solid #81c784;
      }

      .message-header {
        display: flex;
        justify-content: space-between;
        font-size: 0.95rem;
        color: #444;
        margin-bottom: 8px;
      }

      .message-username {
        font-weight: 700;
        color: #2e7d32;
      }

      #message-submit {
        display: flex;
        gap: 12px;
        margin-top: auto;
      }

      #message-submit input {
        flex: 1;
        padding: 16px;
        border: 1px solid #ddd;
        border-radius: 14px;
        font-size: 1.1rem;
        box-sizing: border-box;
      }

      #message-submit input:focus {
        outline: none;
        border-color: #66bb6a;
        box-shadow: 0 0 0 3px rgba(102, 187, 106, 0.3);
      }

      #message-submit button {
        flex-shrink: 0;
        padding: 16px 28px;
        background: #4caf50;
        color: white;
        border: none;
        border-radius: 14px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
      }

      #message-submit button:hover {
        background: #388e3c;
      }

      .modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        align-items: center;
        justify-content: center;
        z-index: 100;
      }

      .modal-content {
        background: white;
        padding: 40px;
        border-radius: 20px;
        width: 90%;
        max-width: 450px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      }

      .modal-content h3 {
        margin-bottom: 25px;
        color: #2e7d32;
        font-family: 'Fredoka One', cursive;
        font-size: 2rem;
        text-align: center;
      }

      .modal-actions {
        display: flex;
        gap: 20px;
        margin-top: 30px;
        justify-content: center;
      }

      .save-btn, .cancel-btn, .join-btn {
        padding: 12px 30px;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
      }

      .save-btn, .join-btn {
        background: #4caf50;
        color: white;
      }

      .save-btn:hover, .join-btn:hover {
        background: #388e3c;
      }

      .cancel-btn {
        background: #ddd;
        color: #333;
      }

      .error-message {
        color: #d32f2f;
        font-size: 0.95rem;
        margin-top: 10px;
        display: none;
      }

      @media (max-width: 900px) {
        .header {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }
        .welcome {
          font-size: 2.8rem;
        }
      }

      @media (max-width: 500px) {
        .welcome {
          font-size: 2.4rem;
        }
        .games-title, .chat-title {
          font-size: 2rem;
        }
        .games-section, #chat-area {
          padding: 25px;
        }
      }
    </style>
    <script type="module" src="/js/lobby.js"></script>
    <script type="module" src="/js/chat.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <div>
          <div class="welcome">UNO Online Lobby</div>
          <div class="user-info">
            Welcome back, <strong id="display-name-text"><%= user.display_name || user.username %></strong>! (ID: <%= user.id %>)
            <button id="edit-display-name-btn" class="edit-name-btn" title="Edit display name">Edit</button>
          </div>
        </div>
        <a href="/auth/logout" class="logout-btn">Logout</a>
      </div>

      <!-- Edit Display Name Modal -->
      <div id="edit-display-name-modal" class="modal">
        <div class="modal-content">
          <h3>Edit Display Name</h3>
          <form id="edit-display-name-form">
            <div class="form-group">
              <label for="new-display-name">Display Name</label>
              <input 
                type="text" 
                id="new-display-name" 
                name="display_name" 
                value="<%= user.display_name || user.username %>" 
                placeholder="Enter your display name" 
                maxlength="50"
                required 
              />
            </div>
            <div class="modal-actions">
              <button type="submit" class="save-btn">Save</button>
              <button type="button" id="cancel-edit-btn" class="cancel-btn">Cancel</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Join Private Game Modal -->
      <div id="join-private-game-modal" class="modal">
        <div class="modal-content">
          <h3>Join Private Game</h3>
          <form id="join-private-game-form">
            <div class="form-group">
              <label for="private-game-password">Enter Game Password</label>
              <input 
                type="password" 
                id="private-game-password" 
                name="password" 
                placeholder="Enter password" 
                required 
                autocomplete="off"
              />
            </div>
            <div class="error-message" id="join-error-message"></div>
            <div class="modal-actions">
              <button type="submit" class="join-btn">Join Game</button>
              <button type="button" id="cancel-join-btn" class="cancel-btn">Cancel</button>
            </div>
          </form>
        </div>
      </div>

      <div class="main-content">
        <div class="games-section">
          <h2 class="games-title">Available Games</h2>
          <div id="game-list"></div>
          <h3 class="create-game-title">Create a New Game</h3>
          <form action="/games" method="POST" class="create-game-form">
            <div class="form-group">
              <label for="game-name">Game Name</label>
              <input type="text" id="game-name" name="name" placeholder="My Awesome Game" required />
            </div>

            <div class="form-group">
              <label for="max-players">Max Players</label>
              <select id="max-players" name="max_players" required>
                <option value="2">2 Players</option>
                <option value="3">3 Players</option>
                <option value="4" selected>4 Players</option>
                <option value="5">5 Players</option>
                <option value="6">6 Players</option>
                <option value="7">7 Players</option>
                <option value="8">8 Players</option>
              </select>
            </div>

            <!-- Private Game Checkbox -->
            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" id="is-private-checkbox" name="is_private" />
                <span>Private game (requires password)</span>
              </label>
            </div>

            <!-- Password Field (hidden by default) -->
            <div class="form-group" id="password-group" style="display: none;">
              <label for="game-password">Game Password</label>
              <input
                type="password"
                id="game-password"
                name="password"
                placeholder="Enter a password for this game"
                autocomplete="new-password"
              />
            </div>

            <button type="submit" class="create-game-btn">+ Create New Game</button>
          </form>
        </div>

        <div id="chat-area">
          <h2 class="chat-title">Game Chat</h2>
          <div id="message-listing"></div>
          <div id="message-submit">
            <input type="text" placeholder="Type your message here..." />
            <button>Send</button>
          </div>
        </div>
      </div>
    </div>

    <template id="template-chat-message">
      <div class="chat-message">
        <div class="message-header">
          <span class="message-username"></span>
          <span class="message-time"></span>
        </div>
        <div class="message-text"></div>
      </div>
    </template>

    <template id="game-listing-template">
      <div class="game-item">
        <div class="game-header">
          <span class="game-name"></span>
          <span class="game-state"></span>
        </div>
        <div class="game-details">
          <div><strong>Game ID:</strong> <span class="game-id"></span></div>
          <div><strong>Created by:</strong> <span class="game-created-by"></span></div>
          <div><strong>Players:</strong> <span class="max-players"></span></div>
          <div><strong>Created:</strong> <span class="created-at"></span></div>
          <div><strong>Privacy:</strong> <span class="game-privacy"></span></div>
        </div>
        <button class="goto-game-btn" data-game-id="" data-is-private="false">Go to Game</button>
      </div>
    </template>

    <script>
      // Edit Display Name Modal
      const editBtn = document.getElementById('edit-display-name-btn');
      const editModal = document.getElementById('edit-display-name-modal');
      const cancelEditBtn = document.getElementById('cancel-edit-btn');
      const editForm = document.getElementById('edit-display-name-form');
      const displayNameText = document.getElementById('display-name-text');

      editBtn.addEventListener('click', () => {
        editModal.style.display = 'flex';
      });

      cancelEditBtn.addEventListener('click', () => {
        editModal.style.display = 'none';
      });

      editModal.addEventListener('click', (e) => {
        if (e.target === editModal) {
          editModal.style.display = 'none';
        }
      });

      editForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(editForm);
        const displayName = formData.get('display_name');

        try {
          const response = await fetch('/lobby/update-display-name', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ display_name: displayName }),
            credentials: 'include',
          });

          if (response.ok) {
            displayNameText.textContent = displayName;
            editModal.style.display = 'none';
          } else {
            alert('Failed to update display name');
          }
        } catch (error) {
          console.error('Error updating display name:', error);
          alert('Failed to update display name');
        }
      });

      // Private Game Password Toggle
      const privateCheckbox = document.getElementById('is-private-checkbox');
      const passwordGroup = document.getElementById('password-group');
      const gamePasswordInput = document.getElementById('game-password');

      if (privateCheckbox && passwordGroup) {
        privateCheckbox.addEventListener('change', () => {
          if (privateCheckbox.checked) {
            passwordGroup.style.display = 'block';
            gamePasswordInput.setAttribute('required', 'required');
          } else {
            passwordGroup.style.display = 'none';
            gamePasswordInput.removeAttribute('required');
            gamePasswordInput.value = '';
          }
        });
      }

      // Join Private Game Modal
      const joinModal = document.getElementById('join-private-game-modal');
      const cancelJoinBtn = document.getElementById('cancel-join-btn');
      const joinForm = document.getElementById('join-private-game-form');
      const joinErrorMessage = document.getElementById('join-error-message');
      let currentGameId = null;

      cancelJoinBtn.addEventListener('click', () => {
        joinModal.style.display = 'none';
        joinErrorMessage.style.display = 'none';
        joinForm.reset();
      });

      joinModal.addEventListener('click', (e) => {
        if (e.target === joinModal) {
          joinModal.style.display = 'none';
          joinErrorMessage.style.display = 'none';
          joinForm.reset();
        }
      });

      joinForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(joinForm);
        const password = formData.get('password');

        try {
          const response = await fetch(`/games/${currentGameId}/join`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ password }),
            credentials: 'include',
          });

          if (response.ok) {
            // Redirect to the game
            window.location.href = `/games/${currentGameId}`;
          } else {
            const text = await response.text();
            joinErrorMessage.textContent = text || 'Incorrect password';
            joinErrorMessage.style.display = 'block';
          }
        } catch (error) {
          console.error('Error joining game:', error);
          joinErrorMessage.textContent = 'Failed to join game';
          joinErrorMessage.style.display = 'block';
        }
      });

      // Handle game join button clicks
      document.addEventListener('click', (e) => {
        if (e.target.classList.contains('goto-game-btn')) {
          e.preventDefault();
          const gameId = e.target.getAttribute('data-game-id');
          const isPrivate = e.target.getAttribute('data-is-private') === 'true';

          if (isPrivate) {
            currentGameId = gameId;
            joinErrorMessage.style.display = 'none';
            joinForm.reset();
            joinModal.style.display = 'flex';
          } else {
            window.location.href = `/games/${gameId}`;
          }
        }
      });
    </script>
  </body>
</html>